<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication1"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="525">
    <StackPanel Margin="0,0,3.4,1.4">
        <StackPanel Orientation="Horizontal">
            <TextBlock Padding="10" Margin="40 40 50 50" TextAlignment="Left">身高:</TextBlock>
            
            <TextBox Padding="10 10 150 10" Margin="0 40 50 50"></TextBox>
            
            <Button Padding="20 10 20 10" Margin="10 40 10 50">消去</Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <TextBlock Padding="10" Margin="40 40 50 50" TextAlignment="Left">體重:</TextBlock>

            <TextBox Padding="10 10 150 10" Margin="0 40 50 50"></TextBox>

            <Button Padding="20 10 20 10" Margin="10 40 10 50">消去</Button>
        </StackPanel>
        <Button Padding="20" Margin="100 10">計算</Button>

        <TextBlock Padding="10" Margin="50 10" TextAlignment="Center">0</TextBlock>
    </StackPanel>
</Window>
